<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="main-menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About</attribute>
        <attribute name="action">win.about</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Toggle SSH filter</attribute>
        <attribute name="action">win.toggle-ssh-filter</attribute>
      </item>
      <submenu>
        <attribute name="label" translatable="yes">_Task limiter</attribute>
        <item>
          <attribute name="label" translatable="yes">_Enabled</attribute>
          <attribute name="action">win.task-limiter</attribute>
          <attribute name="target">Enabled</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">_Disabled</attribute>
          <attribute name="action">win.task-limiter</attribute>
          <attribute name="target">Disabled</attribute>
        </item>
      </submenu>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Toggle color scheme</attribute>
        <attribute name="action">win.toggle-color-scheme</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Show keyboard shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
    </section>
  </menu>
  <template class="DorstWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="no">DÃ˜RST</property>
    <property name="default_width">423</property>
    <child>
      <object class="GtkStack" id="stack">
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">empty</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkHeaderBar">
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkWindowHandle">
                    <property name="vexpand">True</property>
                    <property name="child">
                      <object class="AdwStatusPage">
                        <property name="icon-name">media-floppy-symbolic</property>
                        <property name="title" translatable="yes">Enter repository URL</property>
                        <property name="child">
                          <object class="GtkEntry" id="repo_entry_empty">
                            <property name="placeholder-text" translatable="yes">URL</property>
                            <property name="secondary-icon-name">list-add-symbolic</property>
                            <property name="hexpand">False</property>
                            <property name="halign">center</property>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="child">
              <object class="AdwToastOverlay" id="toast_overlay">
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="hexpand">True</property>
                    <child>
                      <object class="AdwHeaderBar">
                        <style>
                          <class name="flat"/>
                        </style>
                        <child type="start">
                          <object class="GtkButton" id="button_start">
                            <property name="action-name">win.process-targets</property>
                            <property name="icon-name">folder-download-symbolic</property>
                            <property name="tooltip-text">Start</property>
                          </object>
                        </child>
                        <child type="end">
                          <object class="GtkMenuButton">
                            <property name="icon-name">open-menu-symbolic</property>
                            <property name="menu-model">main-menu</property>
                            <property name="tooltip-text" translatable="yes">Menu</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="hscrollbar-policy">never</property>
                        <property name="min-content-height">360</property>
                        <property name="vexpand">True</property>
                        <property name="child">
                          <object class="AdwClamp">
                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="margin-bottom">12</property>
                                <property name="margin-start">12</property>
                                <property name="margin-end">12</property>
                                <child>
                                  <object class="GtkRevealer" id="revealer_banner">
                                    <property name="child">
                                      <object class="AdwBanner" id="banner">
                                        <property name="margin-bottom">6</property>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">horizontal</property>
                                    <property name="margin-top">6</property>
                                    <property name="margin-bottom">6</property>
                                    <style>
                                      <class name="linked"/>
                                    </style>
                                    <child>
                                      <object class="GtkButton" id="button_source_dest">
                                        <property name="action-name">win.select-source-directory</property>
                                        <property name="icon-name">folder-symbolic</property>
                                        <property name="tooltip-text" translatable="yes">Select source directory</property>
                                        <style>
                                          <class name="suggested-action"/>
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkEntry" id="repo_entry">
                                        <property name="placeholder-text" translatable="yes">Enter repository URL</property>
                                        <property name="secondary-icon-name">list-add-symbolic</property>
                                        <property name="hexpand">True</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="button_backup_dest">
                                        <property name="action-name">win.select-backup-directory</property>
                                        <property name="icon-name">system-file-manager-symbolic</property>
                                        <property name="tooltip-text" translatable="yes">Select backup directory</property>
                                        <property name="visible">False</property>
                                        <style>
                                          <class name="suggested-action"/>
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkToggleButton" id="button_backup_state">
                                        <property name="icon-name">media-floppy-symbolic</property>
                                        <property name="tooltip-text" translatable="yes">Enable backups</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkRevealer" id="revealer">
                                    <property name="margin-start">8</property>
                                    <property name="margin-end">8</property>
                                    <property name="transition-type">crossfade</property>
                                    <property name="transition-duration">542</property>
                                    <property name="child">
                                      <object class="GtkProgressBar" id="progress_bar">
                                        <style>
                                          <class name="osd"/>
                                          <class name="main-progress"/>
                                        </style>
                                      </object>
                                    </property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListBox" id="repos_list">
                                    <property name="visible">False</property>
                                    <property name="selection-mode">none</property>
                                    <property name="margin-top">6</property>
                                    <style>
                                      <class name="boxed-list"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
